<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:id="@+id/sad"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            >

            <ImageView
                android:id="@+id/img_v"
                android:layout_width="match_parent"
                android:src="@drawable/grafik"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dataTextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data artikel"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="8dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/dataTextDate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Data artikel"
                android:layout_marginLeft="20dp"
                android:textSize="11dp"/>

            <TextView
                android:id="@+id/dataTextKonten"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="fill_horizontal"
                android:text="Data artikel asdasjdklasjdlaskjdlkasjdlkasjdjasdlaksjd  asdashdkajsdhkasjdh loremasdksadassadsadadasdaklsjdalskjdlaskjdlkasjdlaskjdlasjdlskajdalskdj"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>